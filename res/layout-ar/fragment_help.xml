<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/yes"
        android:id="@+id/help_yes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/yes"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:layoutDirection="locale"
        android:text="@string/yes" />

    <TextView
        android:id="@+id/help_ok"
        android:background="@color/ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/help_yes"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawableLeft="@drawable/ok"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:layoutDirection="locale"
        android:text="@string/no_w" />

    <TextView
        android:id="@+id/help_no"
        android:background="@color/no"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/help_ok"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawableLeft="@drawable/no"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:layoutDirection="locale"
        android:text="@string/no_wo" />

</RelativeLayout>