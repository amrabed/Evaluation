        <activity
            android:name=".ActivityGuide$DetailsActivity"
            android:configChanges="locale|keyboardHidden|screenSize|screenLayout|layoutDirection"
            android:label="@string/menu_guide" >
        </activity>

        <activity
            android:name=".ActivityPreferences"
            android:configChanges="locale|keyboardHidden|orientation|screenSize|screenLayout|layoutDirection"
            android:label="@string/menu_settings" >
        </activity>
        <activity
            android:name=".ActivityProgress"
            android:configChanges="locale|keyboardHidden|orientation|screenSize|screenLayout|layoutDirection"
            android:label="@string/menu_progress" >
        </activity>
    </application>

</manifest>