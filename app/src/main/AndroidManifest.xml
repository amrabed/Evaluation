            android:label="@string/title_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityEdit"
            android:configChanges="locale|keyboardHidden|orientation|screenSize|screenLayout|layoutDirection"
            android:label="@string/menu_edit" >
